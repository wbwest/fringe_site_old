<% form_for :project do |form| %>
  <% block_me "categorize your project", nil, "700px" do %>
    <p>Choose the category that best fits your project.</p>
    <%= select_tag "categories", "<option>Choose a Category</option>" +
        options_from_collection_for_select(@categories, :id, :name), 
        :style => "width:400px;height:30px;font-size:medium" %>   
    <%= set_focus :categories %>
    <%= observe_field :categories, :url => {:action => :get_cat_description}, 
        :frequency => 1, :update => :description, :with => "category", 
        :loading => "Element.hide('description');Element.show('spinner')",
        :complete => "Element.hide('spinner');Element.show('description')" %>        
    <br/>
    <%= image_tag "spinner.gif", :id => "spinner", :style=> "display:none;image-align:center" %>
    <div id="description" style="width:400px">
    </div>  
    <br/>
  <% end %>
<% end %>
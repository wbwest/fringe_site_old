<% if @history.length > 0%>
  <% @date = DateTime.new %>
  <% block_me "history", nil, "700px" do %>

    <% @history.each do |log| %>
    <% create_date =  nice_date log.created_at %>
      <% if @date != (nice_date log.created_at) %>
        <h3> 
          <%= create_date  %>
        </h3>
      <% end %>
    
      <p>      
        <% @date = nice_date log.created_at %>
        <%= @project.title %>
        <%= log.description %>
      </p>        
    <% end %>
  <% end %>
<% end %>
<%= 
  begin
    user_id = params[:id] if !user_id
    user = User.find_by_id(user_id)
    picture_path = user.picture
    
    picture_path = user.picture[0,user.picture.length-4] + "_thumb.jpg" if show_thumbs rescue nil

    link_to image_tag(picture_path),
            :controller => :profile, 
            :action => :view, 
            :id => user.id
  end
%>
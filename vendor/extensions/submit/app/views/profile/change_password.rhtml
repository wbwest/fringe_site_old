<% form_tag do %>    
  <p>
    Please enter a new password to access the website.
  </p>
  <p>
    <label for="password">password</label>
    <%= password_field_tag :password %>
    <%= set_focus :password %>
  </p>
  <p>
    <label for="user_password_confirmation">confirm password</label>
    <%= password_field_tag :password_confirmation, :size => 40 %>
  </p>
  <%= submit_tag "reset" %>
<% end %>

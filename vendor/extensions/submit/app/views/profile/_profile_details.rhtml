<% block_me nil, nil, "500px" do %>    
  <div style="float:left;margin:0 20px 20px 0;">
    <%= render :partial => "user_image", :locals => {:image_width => "130px" } %>
  </div>
  
  <div>
    <h1><%= @profile_user.first_name + " " + @profile_user.last_name   %></h1>
    <%= link_to "Edit", {:action => :edit, :id => @profile_user.id} if params[:id] == session[:user_id].to_s %>
    <%= render :partial => "layouts/flash_alert" %>
    <p>
      Joined: <%= nice_date @profile_user.created_at %>
      <br/>
      Last Login: <%= nice_date @profile_user.last_login %>
    </p>
  </div>  
  
  <p style="clear:both"><%= @profile_user.formatted_profile if @profile_user.profile? %></p>
<% end %>
<% title "Login"%>
<%= render :partial => "layouts/flash_alert" %>
<% block_me "please log in", nil, "700px" do %>
  <% form_tag do %>
    <p>
      <label for="email">Email Address:</label>
      <%= text_field_tag :email, params[:email] %>
      <%= set_focus 'email' %>
    </p>
    <p>
      <label for="password">Password:</label>
      <%= password_field_tag :password, params[:password] %>
    </p>
    <p>
      <%= submit_tag "Login" %>
      or
      <%= link_to  "create an account", :controller => :profile, :action => :add_user %>
    </p>
    <p>
      forgot your password?  click <%= link_to "here", :action => :forgot_password %>
    </p>
  <% end %>
<% end %>
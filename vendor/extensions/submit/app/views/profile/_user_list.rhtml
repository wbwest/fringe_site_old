<% cols = 1 if !cols %>
<% idx = 0 %>

<table>
  <tr>
    <% for user in users %>
      
      <% if idx == cols %>
        <% idx=0 %> 
        </tr><tr>          
      <% end %>
      <% idx = idx+1 %>
    
    <td class="user_list">
      <%= render :partial => "profile/user_image", :thumbs => true, :locals => {:user_id => user, :show_thumbs => show_thumbs} %>
      <br/>
      <%= link_to user.full_name, :controller => :profile, :action => :view, :id => user.id  %>
    </td>
  <% end %>
  </tr>
</table>
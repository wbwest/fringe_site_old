<% form_for :user, :html => {:multipart => true} do |form| %>
  <h3>Which freak are you?</h3>
  <p>
    choose a freak for your profile picture
    ...or <%= link_to "chose your own", :action => :upload_image, :id => params[:id] %>  picture
  </p>
  <table>
    <tr>
      <% @freak_pictures.each do |freak_picture| %>  
      <td style="padding-right:20px">
        <%  file_name = freak_picture[14,100] %>
        <%= link_to (image_tag file_name), :action=>:associate_image, :picture=>file_name, :id=>params[:id]  %>
      </td>
      <% end %>
    </tr>
  </table	
  <p>
    <%= link_to "cancel", :action => :view, :id => params[:id] %>
  </p>
<% end %>
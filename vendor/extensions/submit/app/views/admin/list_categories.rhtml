<div class="left_column">
  <p>
    <%= link_to "<< back", :action=>:index %>
  </p>

  <% block_me "categories" do %>
    <%= render :partial => "layouts/flash_alert" %>
    <%= link_to "add new", :action => :add_category %>
    <ul>
      <% Cat.all.each do |category| %>
        <li>
          <%= category.name %>
          <%= link_to "edit", :action => :edit_category, :id => category %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
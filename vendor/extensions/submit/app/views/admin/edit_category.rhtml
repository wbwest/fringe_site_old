<fieldset>
  <legend>create a category</legend>
  <% form_for :category do |form| %>
    <p>
      <label for="name">name</label>
      <%= form.text_field :name, :size => 60 %>
      <%= set_focus 'category_name' %>
    </p>
     <p>
        <label for="description">Description</label>
        <%= form.text_area :description, :rows => 10, :cols => 60 %>
      </p>
    <%= submit_tag "Update Category", :class  => "submit" %>
    <%= link_to    "Cancel",       :action => :list_categories %>
  <% end %>
</fieldset>
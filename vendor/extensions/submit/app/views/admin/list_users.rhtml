<div>
  <p>
    <%= link_to "<< back", :action=>:index %>
  </p>

  <div class="left_column">
    <% block_me "all users", nil, "500px" do %>
      <table>
        <% for user in @users %>
          <tr>
            <td><%= link_to user.full_name, :controller => :profile, :action => :view, :id => user.id  %></td>
            <td><%= user.email %></td>
            <td><%= link_to "edit", :controller => :profile, :action => :edit, :id => user.id  %></td>
            <td>
              <%= link_to "delete", 
                  {:controller => :profile, :action => :delete, :id => user.id},
                  :confirm => "delete '#{user.full_name}', are you sure?", :post => true   %>              
            </td>
          </tr>
        <% end %>
      </table>
      <br/>
      <%= will_paginate @users %>
  <% end %>
  </div>

  <div class="right_column">
  <% block_me "latest logins" do %>
      <table>
      <% for user in @last_logins %>
        <tr>
          <td style="padding-right:20px">
            <%= link_to user.full_name, :controller => :profile, :action => :view, :id => user %>
          </td> 
          <td>
            <%= nice_date user.last_login %>, <%= nice_time user.last_login %>
          </td>
        </tr>
      <% end %>   
      </table>
    <% end %>
  
  </div>
</div>
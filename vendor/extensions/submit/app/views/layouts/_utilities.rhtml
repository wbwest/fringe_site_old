<div> 
  <% if session[:user_id] %>
    logged in as <%= User.find_by_id(session[:user_id]).full_name %>
    <br/>
    <%= link_to "logout", {:controller => :profile, :action => :logout}, :class => "header" %>
  <% else %>
    <%= link_to "login", {:controller => :profile, :action => :login}, :class => "header" %> 
    or <%= link_to "create", {:controller => :profile, :action => :add_user}, :class => "header" %> 
    an account
  <% end %>
</div>
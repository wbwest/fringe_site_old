<div id="flash">
  <% if flash[:notice] %> <p style="color: green"> <%= flash[:notice] %> </p> <% end %>
  <% if flash[:error] %>  <p style="color: red">   <%= flash[:error] %>  </p> <% end %>
</div>

<script type="text/javascript">
  setTimeout("new Effect.Fade('flash');", 3000)
</script>

<%
 flash[:notice] = nil
 flash[:error]  = nil
%>
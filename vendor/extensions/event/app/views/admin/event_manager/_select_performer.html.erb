<table class="admin_table">
  <% @performers.each do |performer| %>
    <% unless @event.performers.include?(performer) %>
    <tr>
      <td><%= performer.company %></td>
      <td><%= link_to_remote "select", 
                 :url=>{:action=>:attach_performer, :event_id=>params[:id], :performer_id=>performer}, 
                 :update=>"performers" %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
<%= link_to_remote "cancel",
      :url=>{:action=>:cancel_select, :event_id=>params[:id]}, 
      :update=>"performers"  %>
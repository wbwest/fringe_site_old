<h1><%= @event.name %>.</h1>
<%= @event_description %>
<h3>performers</h3>
<% @performers.each do |performer| %>
  <p>
    <%= performer.company %>
    <%= link_to "edit", :controller=>"admin/performer_manager", :action=>"edit", :id=>performer %>
    <%= link_to "remove", :action=>"detach_performer", :performer_id=>performer, :event_id=>@event %>
  </p>
<% end %>
<%= link_to "add performer", :action=>"select_performer", :id=>@event %>
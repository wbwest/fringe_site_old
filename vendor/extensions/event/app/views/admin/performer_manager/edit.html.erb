<h2>Add a Performer</h2>
<%= error_messages_for 'proposal' %>

<% form_for :performer do |form| %>

  <p>
    <label for="company">Company</label>
    <%= form.text_field :company, :size => 40 %>
  </p>
  
  <p>
    <label for="url">URL</label>
    <%= form.text_field :url, :size => 40 %>
  </p>

  <p>
    <label for="image">Image URL</label>
    <%= form.text_field :image, :size => 40 %>
  </p>
  
  <p>
    <label for="location">Location</label>
    <%= form.text_field :location, :size => 40 %>
  </p>
  
  <p>
    <label for="time">Time</label>
    <%= form.text_field :time, :size => 40 %>
  </p>
  
  <p>
    <label for="description">Description</label>
    <%= form.text_area :description, :rows => 10, :cols => 60, :rows=>15, :cols=>60 %>
  </p>
  
  <p>
    <label for="headliner">Is this a headliner?</label>
    <%= form.check_box :headliner %>
  </p>

  <%= submit_tag "Update Performer", :class => "submit" %>
  <%= link_to "cancel", :controller => "admin/performer_manager", :action => "index" %>
  
<% end %>